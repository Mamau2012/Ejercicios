#include "p16F628a.inc"    ;incluir librerias relacionadas con el dispositivo
 __CONFIG _FOSC_INTOSCCLK & _WDTE_OFF & _PWRTE_OFF & _MCLRE_OFF & _BOREN_OFF & _LVP_OFF & _CPD_OFF & _CP_OFF    
;configuraci√≥n del dispositivotodo en OFF y la frecuencia de oscilador
;es la del "reloj del oscilador interno" (INTOSCCLK)     
RES_VECT  CODE    0x0000            ; processor reset vector
    GOTO    START                   ; go to beginning of program
; TODO ADD INTERRUPTS HERE IF USED
MAIN_PROG CODE                      ; let linker place main program
;variables para el contador:
i equ 0x30
j equ 0x31
jx equ 0x32
mx equ 0x33
x equ 0x34

 
;inicio del programa: 
START
    MOVLW 0x07 ;Apagar comparadores
    MOVWF CMCON


    BCF STATUS, RP1 ;Cambiar al banco 1
    BSF STATUS, RP0 
    MOVLW b'00000000' 
    MOVWF TRISB 
    MOVLW b'00000000' 
    MOVWF TRISA
    BCF STATUS, RP0 ;Regresar al banco 0

INICIO
   CALL LCD
   CALL TEXT1
   CALL SIG
   CALL TEXT2
   GOTO INICIO
   
TEXT1
    MOVLW ' '
    MOVWF PORTB
    CALL ENVIA
    MOVLW '.'
    MOVWF PORTB
    CALL ENVIA
    MOVLW ':'
    MOVWF PORTB
    CALL ENVIA
    MOVLW ':'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'M'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'A'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'U'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'R'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'I'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'C'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'I'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'O'
    MOVWF PORTB
    CALL ENVIA
    MOVLW ':'
    MOVWF PORTB
    CALL ENVIA
    MOVLW ':'
    MOVWF PORTB
    CALL ENVIA
    MOVLW '.'
    MOVWF PORTB
    CALL ENVIA
   ; CALL PAUSA
    RETURN
    
TEXT2
    MOVLW ' '
    MOVWF PORTB
    CALL ENVIA
    MOVLW '.'
    MOVWF PORTB
    CALL ENVIA
    MOVLW ':'
    MOVWF PORTB
    CALL ENVIA
    MOVLW ':'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'V'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'A'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'Z'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'Q'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'U'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'E'
    MOVWF PORTB
    CALL ENVIA
    MOVLW 'Z'
    MOVWF PORTB
    CALL ENVIA
    MOVLW ':'
    MOVWF PORTB
    CALL ENVIA
    MOVLW ':'
    MOVWF PORTB
    CALL ENVIA
    MOVLW '.'
    MOVWF PORTB
    CALL ENVIA
    RETURN
    
LCD
    BCF PORTA, 0
    MOVLW 0X01
    MOVWF PORTB
    CALL PRENDE
    MOVLW 0x0c
    MOVWF PORTB
    CALL PRENDE
    MOVLW 0x3c
    MOVWF PORTB
    CALL PRENDE
    BSF PORTA, 0
    RETURN
    
PRENDE
   BSF PORTA,1
   CALL DELAY
   BCF PORTA, 1
   CALL DELAY
   RETURN   
    
ENVIA
   BSF PORTA, 0
   CALL PRENDE
   RETURN
   
SIG
   BCF PORTA, 0
   MOVLW 0xC0
   MOVWF PORTB
   CALL PRENDE 
   RETURN
   
DELAY
   MOVLW d'48'
   MOVWF j
DOS
   MOVLW d'150'
   MOVWF i
UNO
   DECFSZ i,1
   GOTO UNO
   DECFSZ j,1
   GOTO DOS
RETURN
 
    
    END
